# ============================================================================
# Dollar Insight - Backend (Spring Boot) 환경 변수
# ============================================================================
# 사용법: 이 파일을 .env로 복사한 후 실제 값으로 채워주세요
# cp .env.example .env

# ============================================================================
# Server
# ============================================================================
SERVER_PORT=9090

# ============================================================================
# PostgreSQL Database
# ============================================================================
# 방법 1: 전체 URL 사용
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/dollar_insight

# 방법 2: 개별 설정 사용 (SPRING_DATASOURCE_URL이 없을 때 사용)
POSTGRESQL_URL=postgres
POSTGRESQL_PORT=5432
POSTGRESQL_NAME=dollar_insight
POSTGRESQL_USER=your-postgres-username
POSTGRESQL_PASSWORD=your-postgres-password

SPRING_DATASOURCE_USERNAME=${POSTGRESQL_USER}
SPRING_DATASOURCE_PASSWORD=${POSTGRESQL_PASSWORD}
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# ============================================================================
# MongoDB Database
# ============================================================================
SPRING_DATA_MONGODB_HOST=mongodb
SPRING_DATA_MONGODB_PORT=27017
SPRING_DATA_MONGODB_DATABASE=dollar_insight
SPRING_DATA_MONGODB_USERNAME=your-mongo-username
SPRING_DATA_MONGODB_PASSWORD=your-mongo-password
SPRING_DATA_MONGODB_AUTHENTICATION_DATABASE=admin

# ============================================================================
# Redis Cache
# ============================================================================
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=your-redis-password

# ============================================================================
# JWT Authentication
# ============================================================================
# Base64 인코딩된 시크릿 (선택 1)
APP_JWT_SECRET_BASE64=

# 일반 문자열 시크릿 (선택 2, 최소 32자)
APP_JWT_SECRET=your-jwt-secret-at-least-32-characters-long
APP_JWT_ACCESS_TTL_SECONDS=3600
APP_JWT_REFRESH_TTL_DAYS=28
APP_JWT_REFRESH_PEPPER=your-refresh-pepper

# ============================================================================
# OAuth - Kakao
# ============================================================================
KAKAO_REST_API_KEY=your-kakao-rest-api-key
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_TIMEOUT_SECONDS=5
KAKAO_ALLOW_DEFAULT_REDIRECT=false

# ============================================================================
# OAuth - Google
# ============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_TIMEOUT_SECONDS=5
GOOGLE_ALLOW_DEFAULT_REDIRECT=false

# ============================================================================
# External Services
# ============================================================================
CHROMADB_BASE_URL=http://chromadb:9000
FASTAI_BASE_URL=http://dollar-insight-ai-service:8000

# ============================================================================
# Logging
# ============================================================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_DOLLARINSIGHT=DEBUG
LOGGING_FILE_PATH=./logs

# ============================================================================
# Spring Profile
# ============================================================================
SPRING_PROFILES_ACTIVE=local
